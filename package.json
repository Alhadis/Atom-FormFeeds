{
	"name": "form-feeds",
	"version": "0.0.0",
	"description": "Display form-feed characters (U+000C) as horizontal dividers in source code.",
	"author": "John Gardner <gardnerjohng@gmail.com>",
	"license": "ISC",
	"keywords": ["form-feed", "whitespace", "page-break", "line-break"],
	"configSchema": {
		"useCaretNotation": {
			"title": "Use caret notation",
			"description": "Render form-feeds as `^L` using [caret notation](https://en.wikipedia.org/wiki/Caret_notation).",
			"type": "boolean",
			"default": true
		}
	}
}
